<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25sp"
    android:id="@+id/relativeLayout_Comentario">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_comentario"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:src="@drawable/ic_profile"/>
    <RelativeLayout
        android:id="@+id/relativeLayout_Comentario_titulo"
        android:layout_toEndOf="@+id/img_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp">

        <TextView
            android:id="@+id/text_comentario_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_comentario_fecha"
            android:layout_toEndOf="@id/text_comentario_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="7sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_toEndOf="@+id/img_comentario"
        android:layout_below="@+id/relativeLayout_Comentario_titulo"
        android:layout_marginStart="25sp"
        android:layout_marginTop="5sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border">

        <TextView
            android:id="@+id/text_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="textMultiLine"
            android:textSize="18sp"/>



    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/cover" />

            android:layout_centerHorizontal="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="107dp"
            android:adjustViewBounds="true"
            android:background="@drawable/profile" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="263dp"
            android:text="Diego MÃ©ndez Valverde"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addPostBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/baseline_post_add_black_48" />

        <Button
            android:id="@+id/editProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/baseline_edit_black_48"
            android:onClick="editProfile" />

        <TextView
            android:id="@+id/infoTxt"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/addPostBtn"
            android:layout_marginTop="75dp"
            android:text="Test" />

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_pager"
        android:layout_below="@+id/addPostBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="31dp"
        android:text="" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="143dp" />

</ScrollView>
